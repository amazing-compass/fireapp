<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:background_element="$graphic:background_common"
    ohos:padding="5vp"
    >

    <TextField
        ohos:id="$+id:register_name_textfield"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:hint="登录帐号"
        ohos:text_size="15fp"
        ohos:text_color="#777777"
        ohos:text_alignment="vertical_center"
        ohos:margin="5vp"
        ohos:padding="10vp"
        ohos:layout_alignment="horizontal_center"
        ohos:background_element="$graphic:background_textfield"></TextField>

    <TextField
        ohos:id="$+id:register_pwd_textfield"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:hint="登录密码"
        ohos:text_size="15fp"
        ohos:text_color="#777777"
        ohos:text_alignment="vertical_center"
        ohos:margin="5vp"
        ohos:padding="10vp"
        ohos:layout_alignment="horizontal_center"
        ohos:background_element="$graphic:background_textfield"></TextField>

    <Button
        ohos:id="$+id:register_btn"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="注  册"
        ohos:text_color="#ffffff"
        ohos:text_size="13fp"
        ohos:padding="10vp"
        ohos:background_element="#ff383b"
        ohos:layout_alignment="horizontal_center"
        ohos:top_margin="15vp"></Button>
</DirectionalLayout>