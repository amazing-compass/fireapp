<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"

    ohos:background_element="$graphic:background_common"
    ohos:padding="5vp"
    >

    <Image
        ohos:height="200vp"
        ohos:width="match_content"
        ohos:image_src="$media:app"
        ohos:scale_mode="stretch"
        ohos:layout_alignment="horizontal_center"
        ></Image>

    <TextField
        ohos:id="$+id:login_name_textfield"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:hint="登录帐号"
        ohos:text_size="15fp"
        ohos:text_color="#777777"
        ohos:text_alignment="vertical_center"
        ohos:margin="5vp"
        ohos:padding="10vp"
        ohos:layout_alignment="horizontal_center"
        ohos:background_element="$graphic:background_textfield"></TextField>

    <TextField
        ohos:id="$+id:login_pwd_textfield"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:hint="登录密码"
        ohos:text_size="15fp"
        ohos:text_color="#777777"
        ohos:text_alignment="vertical_center"
        ohos:margin="5vp"
        ohos:padding="10vp"
        ohos:layout_alignment="horizontal_center"
        ohos:background_element="$graphic:background_textfield"></TextField>

    <Button
        ohos:id="$+id:login_btn"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="登   录"
        ohos:text_color="#ffffff"
        ohos:text_size="13fp"
        ohos:padding="10vp"
        ohos:background_element="#ff383b"
        ohos:layout_alignment="horizontal_center"
        ohos:top_margin="15vp"></Button>

    <Text
        ohos:id="$+id:register"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="注册账号"
        ohos:layout_alignment="right"
        ohos:text_color="#aaaaaa"
        ohos:text_size="10fp"
        ohos:top_margin="10vp"
        ohos:right_margin="20vp"
        />


</DirectionalLayout>